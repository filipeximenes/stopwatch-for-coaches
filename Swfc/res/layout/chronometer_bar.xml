<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+now_swimming/barLL"
	android:layout_width="fill_parent"
	android:layout_height="70sp"
	android:orientation="horizontal"
	android:background="@color/steampBlue"
	>
	<ToggleButton
		android:id="@+now_swimming/toggleBT"
		android:text="@string/CompetitonChronoStop"
		android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
		android:gravity="center"
	    android:layout_weight="1"
	    android:textOn="@string/CompetitonChronoToggleButton"
	    android:textOff="@string/CompetitonChronoToggleButton"
	    android:background="@android:drawable/btn_default"
		/>
	<base.stopwatch.chronometer.BaseChronometer
		android:id="@+now_swimming/chronoCH"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:textColor="@color/white"
		android:textStyle="bold"
		style="@style/chrono_main_chrono"
		/>
	<Button
		android:id="@+now_swimming/startBT"
		android:text="@string/CompetitonChronoStart"
		android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
		android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/chrono_start_button"
		/>
	<Button
		android:id="@+now_swimming/stopBT"
		android:text="@string/CompetitonChronoStop"
		android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
		android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/chrono_stop_button"
		/>
	<Button
		android:id="@+now_swimming/clearBT"
		android:text="@string/CompetitonChronoClear"
		android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
		android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/chrono_reset_button"
		/>	
	<Button
		android:id="@+now_swimming/saveBT"
		android:text="@string/CompetitonChronoSave"
		android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
		android:gravity="center"
	    android:layout_weight="1"
	    android:background="@drawable/chrono_start_button"
		/>
</LinearLayout>
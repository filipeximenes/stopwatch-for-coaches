<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="simultaneous.stopwatches.free"
    android:versionCode="20"
    android:versionName="3.1.1" >
    
    <uses-sdk 
        android:minSdkVersion="7" 
        android:targetSdkVersion="7"
        />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:allowBackup="true">
        >
        
        <activity
            android:name="forcoaches.stopwatch.MenuActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="forcoaches.stopwatch.ChronometerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        
        <activity
            android:name="stopwatch.forcoaches.plus.database.SavedDatesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        
        <activity
            android:name="stopwatch.forcoaches.plus.database.ChronoNamesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        
        <activity
            android:name="stopwatch.forcoaches.plus.database.TimeListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>
        
    </application>
</manifest>
